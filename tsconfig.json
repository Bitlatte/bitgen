{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "outDir": "bin"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "bin"
  ]
}